	<script type="text/javascript" src="../js/bootstrap-switch.min.js"></script>
	<script type="text/javascript" src="../js/bootstrap-datetimepicker.min.js"></script>
	<script type="text/javascript" src="../js/bootstrap-datetimepicker.zh-CN.js"></script>
	<script type="text/javascript" src="../js/bootstrap-datetimepicker.fr.js"></script>
	<script type="text/javascript">
		$(function() {
			// 		$(".btn-warning").click(function(){
			// 			window.location.href="payment.html";
			// 		})
			$(".waimai-refresh").click(function(){
//				setTimeout(function(){
					$(".waimai-refresh span").addClass("refresh");
					setTimeout(function(){
						$(".waimai-refresh span").removeClass("refresh");
					},1500)
//				},2000)
	 			
	 		})
		})

		//滚动条宽度
		$(document).on('click', '.wm-order-tab .tab-nav', function(e) {
			var index = $(this).index();
			scrollWidth(index);
		})
			window.onresize = function() {
				scrollWidth(0);
			}
			window.onload = function() {
				scrollWidth(0);
			}
		

		function scrollWidth(i) {
			var sw = $(".wm-order-list>ul")[i].offsetWidth - $(".wm-order-list>ul")[i].scrollWidth;
			var tsw = $(".wm-order-list>ul")[i].scrollWidth;
			$(".wm-order-title").eq(i).css({
				"width": tsw
			})
		}

		$('[name="status"]').bootstrapSwitch({
			onText: "开",
			offText: "关",
			onColor: "info",
			offColor: "info",
			size: "large",
			//			animate:false,
			onSwitchChange: function(event, state) {
				if(state == true) {
					$(this).val("1");
				} else {
					$(this).val("2");
				}
			}
		});
		$('[name="auto"]').bootstrapSwitch({
			onText: "开",
			offText: "关",
			onColor: "info",
			offColor: "info",
			size: "mini",
			onSwitchChange: function(event, state) {
				if(state == true) {
					$(this).val("1");
				} else {
					$(this).val("2");
				}
			}
		})
		$(".order-date").datetimepicker({
			language: "zh-CN",
			format: 'yyyy-mm-dd',
			autoclose: true,
			minView: 2,
			pickerPosition:"bottom-left"
			//			bootcssVer:3
		});
		var currentDate=new Date().getFullYear() + '-' + (new Date().getMonth() + 1) + '-' + new Date().getDate();
       $('input.order-date').val(currentDate);
	</script>

</html>