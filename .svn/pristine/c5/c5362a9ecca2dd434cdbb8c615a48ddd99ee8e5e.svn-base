.main-wrapper {
    padding: 7px 0 0 0;
    height: calc(100% - 85px);
    font-size: 16px;
}


.pad-content .left-menu{
	width: 200px;
	
	overflow-y: scroll;
}
.pad-content .left-menu ul li{
	background: #d6f1f8;
	height: 95px;
	line-height: 95px;
	border-bottom: 1px solid #bfbfbf;
	text-align: center;
}
.pad-content .left-menu ul li:hover{
	background: #53d8d3;
	color: white;
}
.pad-content .left-menu ul li i{
	margin-right: 20px;
}
.pad-content .left-menu ul li i img
{
      height: 18px;
}
.pad-content .right-menu{
	flex: 1;
	position: relative;
}
.pad-content .shop-car{
	width: 90px;
	height: 90px;
	border: 1px solid #f6b118;
	border-radius: 50%;
	position: absolute;
	top: 5px;
	right: 0;
	z-index: 1;
	background: white;
	line-height: 90px;
	text-align: center;
}
.pad-content .shop-car:after{
	content: '1';
	height: 36px;
	width: 36px;
	border-radius: 50%;
	background: #d13536;
	color: white;
	position: absolute;
	top: 10px;
	right: 65px;
	text-align: center;
	line-height: 36px;
}
.pad-content .right-menu .search-bar{
	height: 55px;
	line-height: 55px;
	border-bottom: 1px solid #bebebe;
	font-size: 22px;
	padding: 0 15px;
}
.pad-content .right-menu .search-bar .cate.active{
	padding:0 5px;
	background: #53d8d3;
	color: white;
	border-radius: 2px;
	height: 40px;
	line-height: 40px;
	border-radius: 5px;
}
.pad-content .right-menu .search-bar .search-content{
	height: 100%;
}
.pad-content .right-menu .search-bar .search-radius {
  width: 70%;
  height: 36px;
  line-height: 36px;
  padding: 0 8px;
  border: solid 1px #aaa;
  border-radius: 100px;
  background: white;
  display: -webkit-box;
  -webkit-box-orient: horizontal; }

.pad-content .right-menu .search-bar  .search-radius input {
  width: 100%;
  display: inline-block;
  color: #888;
  font-size: 18px;
  border: none;
  background: transparent;
  padding: 0 5px; }

.pad-content .right-menu .search-bar  .search-radius:after {
  content: ' \e641 ';
  font-family: iconfont;
  font-size: 20px; }
.pad-content .right-menu  .search-bar .search-btn{
 	padding-left:5px; 
 	color: #676767;
 	font-size: 18px
 }
 .pad-content .right-menu .food-content{
 	overflow-y: scroll;
 	height:calc(100% - 50px);
 }
  .pad-content .right-menu .food-content .food{
	padding: 15px;
 }
  .pad-content .right-menu .food-content .food img{
  	display: block;
 	width: 100%;
 	position: relative;
 }
 .img{
 	position: relative;
 }
 .food-content .food .img:after{
 	content: '12份';
 	background: #f6c65a;
 	color: white;
    padding: 0 10px;
    height: 40px;
    line-height: 40px;
    opacity:0.9;
    position: absolute;
    bottom: 0px;
    right: 0px;
 }
 .food .food-details{
 	background: #eee;
 	border: 1px solid #bebebe;
 	border-top: none;
 	overflow: hidden;
 	padding: 5px;
 }
 .food-details .price{
 	color: #ee695f;

 }

 .food-content .food-sale-out {
  position: relative; }

 .food-content .food-sale-out:after {
  content: url("../../images/icon-sale-over.png");
  width: 58px;
  height: 51px;
  position: absolute;
  bottom: -2px;
    left: 60px;
 }

 .food-details .num{
 	    margin-top: -8px;
 }
 .food-details .incre-btn{
 	height: 40px;
 	width: 40px;
 	line-height: 40px;
 	text-align: center;
 	border-radius: 50%;
 }
 .incre-btn.add-btn{
 	background: #f6b118;
 }
  .incre-btn.red-btn{
 	border: 1px solid #3333;
 }
.food-content .food .img img{
	width: 100%;
	height: 100%;
}
 .msg-food-detail{
 	width: 450px !important;
 	top: 45% !important;
 }
 .msg-food-detail .img img{
  	width: 100%;
  	height: 280px;
 }
 .msg-food-detail .food-details{
 	background: white;
 	border: none;
 	overflow: hidden;
 	padding: 5px;
 }
 .msg-food-detail .cook-type li{
 	box-sizing: border-box;
	float: left;
	width: 22.5%;
	height: 45px;
	line-height: 45px;
	margin-left: 2%;
	margin-bottom: 15px;
	border-radius: 5px;
	border: 1px solid #a0a0a0;
	text-align: center;
 }
 .msg-food-detail .cook-type li.active{
 	border: none;
 	background: #f0b944;
 	color: white;
 }
 .msg-food-detail .btn{
 	padding: 12px 30px;
 }

 .shop-car-head{
    height: 57px;
    line-height: 57px;
    margin: 0;
    border-bottom: 1px solid #bfbfbf;
 }
  .shop-car-head .all-delete{
  	border-radius: 10px;
  }
.sub-after .btn-pay{
	margin-right: 20px;
	padding: 20px 30px;
}
.sub-after {
	position: absolute;
	bottom: 41px;
}
/*webkit内核*/
.scroll_content::-webkit-scrollbar {
    width:0px;
    height:0px;
}
.scroll_content::-webkit-scrollbar-button    {
    background-color:rgba(0,0,0,0);
}
.scroll_content::-webkit-scrollbar-track     {
    background-color:rgba(0,0,0,0);
}
.scroll_content::-webkit-scrollbar-track-piece {
    background-color:rgba(0,0,0,0);
}
.scroll_content::-webkit-scrollbar-thumb{
    background-color:rgba(0,0,0,0);
}
.scroll_content::-webkit-scrollbar-corner {
    background-color:rgba(0,0,0,0);
}
.scroll_content::-webkit-scrollbar-resizer  {
    background-color:rgba(0,0,0,0);
}
.scroll_content::-webkit-scrollbar {
    width:10px;
    height:10px;
}
/*o内核*/
.scroll_content .-o-scrollbar{
    -moz-appearance: none !important;   
    background: rgba(0,255,0,0) !important;  
}
.scroll_content::-o-scrollbar-button    {
    background-color:rgba(0,0,0,0);
}
.scroll_content::-o-scrollbar-track     {
    background-color:rgba(0,0,0,0);
}
.scroll_content::-o-scrollbar-track-piece {
    background-color:rgba(0,0,0,0);
}
.scroll_content::-o-scrollbar-thumb{
    background-color:rgba(0,0,0,0);
}
.scroll_content::-o-scrollbar-corner {
    background-color:rgba(0,0,0,0);
}
.scroll_content::-o-scrollbar-resizer  {
    background-color:rgba(0,0,0,0);
}
/*IE10,IE11,IE12*/
.scroll_content{
    -ms-scroll-chaining: chained;
    -ms-overflow-style: none;
    -ms-content-zooming: zoom;
    -ms-scroll-rails: none;
    -ms-content-zoom-limit-min: 100%;
    -ms-content-zoom-limit-max: 500%;
    -ms-scroll-snap-type: proximity;
    -ms-scroll-snap-points-x: snapList(100%, 200%, 300%, 400%, 500%);
    -ms-overflow-style: none;
    overflow: auto;
}