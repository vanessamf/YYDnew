/*清零*/
body,div,dl,dt,ul,li,h1,h2,h3,h4,h5,h6,input,form,a,p,textarea{
        margin:0;
        padding:0;
        font-family:"arial, helvetica, sans-serif","微软雅黑"
}

ol,ul,li{
        list-style:none;
}

a{
        text-decoration:none;
        display:block;
        color:#fff;
}
img{
        border:none;
        display:block;
}
input,select,textarea{
    outline:none;
    border:none;
    background:none;/*解决ie6的问题*/
}

/*清除浮动 或者是clearfix*/
.clearfloat{
        zoom:1;
}
.clearfloat:after{
        display:block;
        clear:both;
        content: "";
        visibility:hidden;
        height:0;
}
