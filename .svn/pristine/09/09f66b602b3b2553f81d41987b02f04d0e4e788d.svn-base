	<script type="text/javascript">
		$(function() {
			$('.left-menu li').click(function(e) {
				window.location.href = e.target.id;
			})
		})
		$('[name="status"]').bootstrapSwitch({
			onText: "开",
			offText: "关",
			onColor: "info",
			offColor: "info",
			size: "large",
			state:false,
			//			animate:false,
			onSwitchChange: function(event, state) {
				if(state == true) {
					$(this).val("1");
				} else {
					$(this).val("2");
				}
				if($('#electronic-scale input').val()==1){
					$(".more-bottom").css("display","block");
				}else{
					$(".more-bottom").css("display","none");
				}
			}
		});
	</script>

