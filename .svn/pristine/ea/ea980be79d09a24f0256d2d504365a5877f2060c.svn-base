	<script type="text/javascript">
		$(function() {
			$(".btn-order").click(function() {
				window.location.href = "menu.html";
			})
			$(".btn-pay").click(function() {
				window.location.href = "payment.html";
			})
		})
		$(".reserve-btn").on("click", function() {
			$("#reserveModal").modal('show');
		});
		$(document).ready(function() {
			init();
		});
		var tabNavList = $(".tab-nav");
		var pageTurn = $(".page-turn");

		function init() {
			var tH = $(".desk-item").outerWidth();
			var c = "width:" + tH + "px;"
			//			$(".tab-nav").attr("style", c);
			$(".pull-right").attr("style", c);

			var d = "width:" + tH * 6 + "px;"

			//			if(tabNavList.length > 5) {
			//				$(".tab-nav-wrapper").attr("style", d);
			//				pageTurn.show();
			//			} else {
			//              pageTurn.hide();
			//			}
		}

		var width = $(".desk-item").outerWidth() * 6;
		var tabNavWrapper = $(".tab-nav-wrapper");
		var tabNav = $(".tab-nav");
		var addTransition = function() {
			tabNav.css('transition', 'all 0.2s');
			tabNav.css('webkitTransition', 'all 0.2s');
		}
		var setTranslateX = function(translateX) {
			tabNav.css('transform', 'translateX(' + translateX + 'px)');
			tabNav.css('webkitTransform', 'translateX(' + translateX + 'px)');
		}
		var index = 0;
		var pages = Math.ceil(tabNavList.length / 6);
		/**
		 * 下一页
		 * */
		$(".btn-rooms-next").on("click", function() {
			//			debugger;
			if(index < pages - 1) {
				index++;
				addTransition();
				/*做位移*/
				setTranslateX(-index * width);
			}

		})
		/**
		 * 上一页
		 * */
		$(".btn-rooms-prev").on("click", function() {
			//		debugger;
			if(index > 0) {
				index--;
				addTransition();
				/*做位移*/
				if(index >= 0) {
					setTranslateX(-index * width);
				}
			}
		})

		var desks = document.getElementsByClassName("desks")[0]
		if(desks.scrollHeight > desks.clientHeight) {
			$(".btn-desks-prev").show();
			$(".btn-desks-next").show();
		}
	</script>

