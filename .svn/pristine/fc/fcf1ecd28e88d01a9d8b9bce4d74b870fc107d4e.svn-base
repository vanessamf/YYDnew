		// 打开键盘
		$(document).on('click', '.vip-key-input', function() {
			$(".vip-keyboard").toggleClass('on');
		})
		//关闭键盘
		document.onclick = function(e) {
			e.stopPropagation();
			if(!$(e.target).is(".vip-keyboard") && !$(e.target).is(".vip-keyboard span") && !$(e.target).is(".vip-keyboard span i") && $(".vip-keyboard").hasClass("on") && !$(e.target).is(".vip-key-input ")) {
				$(".vip-keyboard").removeClass('on');
			}
		}
