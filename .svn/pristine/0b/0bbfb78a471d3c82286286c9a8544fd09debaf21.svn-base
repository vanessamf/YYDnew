html {
	width: 100%;
	height: 100%;
}

body {
	width: 100%;
	height: 100%;
	background: #eeeeee;
}

a:hover {
	color: #fff;
	text-decoration: none;
}

i {
	font-style: normal;
}

.no-padding {
	padding: 0;
}

.ml5 {
	margin-left: 5px;
}

.ml10 {
	margin-left: 10px;
}

.mr10 {
	margin-right: 10px;
}

.pl5 {
	padding-left: 5px !important;
}

.pl10 {
	padding-left: 10px !important;
}


/*5等分*/

@media (min-width: 768px) {
	.col-sm-1-5 {
		width: 20%;
		float: left;
	}
	.col-sm-2-5 {
		width: 40%;
		float: left;
	}
	.col-sm-1-8 {
		width: 12.5%;
		float: left;
	}
}


