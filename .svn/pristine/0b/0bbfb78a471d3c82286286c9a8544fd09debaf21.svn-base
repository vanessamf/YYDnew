/*---------------------------------------------头部-----------------------------------------------*/

.header {
	padding: 0 20px;
	height: 50px;
	line-height: 50px;
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 16px;
	color: #fff;
	background: linear-gradient(to top, #29a8b9, #80e9fc);
	background: -webkit-linear-gradient(to top, #29a8b9, #80e9fc);
}

.header .logo {
	padding: 0;
}

.header .back {
	display: flex;
}

.header .back i {
	display: inline-block;
	margin-right: 5px;
	font-size: 20px;
}

.status-wrapper {
	flex: 1;
}

.status-wrapper span {
	margin-left: 25px;
}

.bootstrap-switch {
	background: #fff;
	border-radius: 20px;
}

.bootstrap-switch .bootstrap-switch-handle-off,
.bootstrap-switch .bootstrap-switch-handle-on,
.bootstrap-switch .bootstrap-switch-label {
	padding: 3px 5px;
	border-radius: 20px;
}

.bootstrap-switch.bootstrap-switch-inverse.bootstrap-switch-on .bootstrap-switch-label,
.bootstrap-switch.bootstrap-switch-off .bootstrap-switch-label {
	border-radius: 20px;
}

.header .nav {
	padding: 0;
	height: 36px;
	line-height: 36px;
	font-size: 0;
	text-align: right;
}

.header .nav .nav-item {
	padding: 0 20px;
	margin-left: 6px;
	display: inline-block;
	font-size: 16px;
	background: #31c9e0;
	border-radius: 6px;
	cursor: pointer;
}

.btn-exit {
	padding: 0;
	/*margin-left: 6px;*/
	/*height: 36px;
	line-height: 36px;*/
	/*background: #31c9e0;
	border-radius: 6px;*/
	text-align: right;
}


/*-----------------------------------------------头部END-----------------------------------------------------*/


/*-------------------------------------------------底部--------------------------------------------------------------*/

.footer {
	position: fixed;
	left: 0;
	bottom: 0;
	/*padding:0 20px;*/
	width: 100%;
	height: 35px;
	display: flex;
	justify-content: space-between;
	align-items: center;
	color: #fff;
	background: #799195;
}

.footer div {
	padding: 0 15px;
	display: flex;
	justify-content: space-between;
	align-items: center;
	overflow: hidden;
	white-space: nowrap;
	/*text-overflow: ellipsis;*/
}

.footer div span {
	margin-right: 10px;
}

.footer div span:last-child {
	margin-right: 0;
}

.footer div span i {
	display: inline-block;
	font-size: 16px;
}


/*--------------------------------------------------------------底部END--------------------------------------------------------------*/