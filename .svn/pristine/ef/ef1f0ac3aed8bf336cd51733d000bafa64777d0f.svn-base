<script>
	$(document).ready(function() {
		init();
	});

	function init() {
		var h1 = $(".food-content").height();
		var style = "height:" + (h1 / 2) + "px;"
		$(".food-content .food").attr("style", style);
		var height1 = h1 / 2 - 110;

		var style1 = "height:" + height1 + "px;"
		$(".food-content .food .img").attr("style", style1);
	}
	$(".food").on("click", function() {
		$(".msg-food-detail").show();
		$(".masker").show();
	});

	$(".btn-close").on("click", function() {
		$(".msg-food-detail").hide();
		$(".masker").hide()
	});

	$(".btn-order").on("click", function() {
		window.location.href = "order.html"
	});

	// 返回 
	$(".js_back_handler").on("click", function() {
		window.history.go(-1)
	})

	//
	$("#moreDishes").on('click', function() {
		var $moreDish = $(".alldishes-wrap");
		var $this = $(this);
		$moreDish.toggleClass("on")
	})
</script>