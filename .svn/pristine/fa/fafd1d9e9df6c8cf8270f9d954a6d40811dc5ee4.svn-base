<script>
	//侧边菜单
	$(document).on('click', '.left-menu>ul>li.left-item>a', function(e) {
		var $this = $(e.target);
		//点击父菜单的时候的效果
		$(".left-menu ul.sub-menu>li.sub-item").removeClass("active");
		if($(this).parent().find("ul").is(':visible')) {
			$(this).find(".sup-arrow").addClass("icon-xiayiye3");
			$(this).find(".sup-arrow").removeClass("icon-xiayipian");
			$(this).next().slideUp(200);
		} else {
			$(this).parent().siblings("li").find("ul").slideUp(200);
			$(this).parent().siblings("li").find(".sup-arrow").addClass("icon-xiayiye3");
			$(this).parent().siblings("li").find(".sup-arrow").removeClass("icon-xiayipian");
			$(this).find(".sup-arrow").removeClass("icon-xiayiye3");
			$(this).find(".sup-arrow").addClass("icon-xiayipian");
			$(this).parent().siblings("li").removeClass("active");
			$(this).parent().addClass("active");
			$(this).next().slideDown(200);
		}
	});
	$(document).on('click', '.left-menu ul.sub-menu>li.sub-item>a', function(e) {
		var $this = $(e.target);
		//点击子菜单的时候的效果
		$(this).parent().siblings("li").removeClass("active");
		$(this).parent(".sub-item").addClass("active");
	});
	$(".food").on("click", function() {
		$("#foodDetailModal").modal('show');
	});

	//做法切换
	$(".cook-type-content .cook-type-item").on("click", function() {
		$(this).toggleClass("active");
	})
</script>